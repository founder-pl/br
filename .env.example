# =============================================================================
# System B+R - Environment Configuration
# =============================================================================
# UWAGA: Skopiuj ten plik jako .env i uzupełnij wartości
# cp .env.example .env

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=zmien-ten-klucz-na-produkcji-2025

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_DB=br_system
POSTGRES_USER=br_admin
POSTGRES_PASSWORD=br_secret_2025

# =============================================================================
# Company Information (dane firmy)
# =============================================================================
COMPANY_NAME=Tomasz Sapletta
COMPANY_BRAND=prototypowanie.pl
COMPANY_NIP=5881918662
COMPANY_REGON=220665410
COMPANY_PKD=72.10.Z

# =============================================================================
# Project Settings
# =============================================================================
PROJECT_NAME=Prototypowy system modularny
FISCAL_YEAR=2025

# =============================================================================
# OCR Settings
# =============================================================================
OCR_ENGINE=paddleocr
OCR_LANG=pol
OCR_DPI=300

# =============================================================================
# LLM API Keys (opcjonalne - można używać lokalnych modeli)
# =============================================================================
# OpenAI (dla GPT-4o)
OPENAI_API_KEY=

# Anthropic (dla Claude)
ANTHROPIC_API_KEY=

# OpenRouter (dla zdalnych modeli LLM przez OpenRouter.ai)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openrouter/anthropic/claude-3.5-sonnet

# LiteLLM Master Key
LITELLM_MASTER_KEY=sk-br-llm-2025

# Ollama (lokalne modele - używa lokalnego Ollama na hoście)
OLLAMA_API_BASE=http://host.docker.internal:11434

# =============================================================================
# Monitoring (opcjonalne)
# =============================================================================
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# Sentry (opcjonalne)
SENTRY_DSN=

# =============================================================================
# JWT Settings
# =============================================================================
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =============================================================================
# Configuration Database (for integrations)
# Default: SQLite, can be changed to PostgreSQL/MySQL
# =============================================================================
CONFIG_DB_TYPE=sqlite
CONFIG_DB_URL=sqlite:///config.db
# For PostgreSQL:
# CONFIG_DB_TYPE=postgresql
# CONFIG_DB_URL=postgresql://br_admin:br_secret_2025@postgres:5432/br_config

# Encryption key for storing credentials (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
CONFIG_ENCRYPTION_KEY=

# =============================================================================
# Accounting Integrations (configure via API/UI, credentials encrypted in DB)
# =============================================================================
# iFirma: api_key, username, company_name, invoice_key, expense_key
# Fakturownia: api_token, subdomain
# wFirma: access_key, secret_key, company_id
# InFakt: api_key

# =============================================================================
# Cloud Storage Integrations (configure via API/UI, credentials encrypted in DB)
# =============================================================================
# Nextcloud: url, username, password
# Google Drive: client_id, client_secret, access_token, refresh_token
# AWS S3/MinIO: access_key_id, secret_access_key, bucket, endpoint_url (for MinIO)

# =============================================================================
# Report Auto-Upload
# =============================================================================
REPORTS_OUTPUT_DIR=/app/reports
REPORTS_AUTO_UPLOAD_TO=
