# BR Documentation Generator - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# OpenRouter (dla zdalnych modeli LLM przez OpenRouter.ai)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=nvidia/nemotron-3-nano-30b-a3b:free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Lokalny Ollama (alternatywa dla pracy offline)
# URL do lokalnego serwera Ollama (nie dodawany do Docker)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest

# Wybór domyślnego providera: openrouter | ollama | anthropic | openai
LLM_DEFAULT_PROVIDER=openrouter

# =============================================================================
# LLM Parameters
# =============================================================================

# Temperatura generowania (0.0 - 1.0)
# Niższa = bardziej deterministyczne, wyższa = bardziej kreatywne
LLM_TEMPERATURE=0.3

# Maksymalna liczba tokenów w odpowiedzi
LLM_MAX_TOKENS=4096

# Timeout dla requestów LLM (sekundy)
LLM_TIMEOUT=120

# Retry configuration
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=5

# =============================================================================
# Validation Pipeline Configuration
# =============================================================================

# Włączone poziomy walidacji (comma-separated)
VALIDATION_LEVELS=structure,content,legal,financial

# Maksymalna liczba iteracji poprawek per etap
VALIDATION_MAX_ITERATIONS=3

# Minimalny wymagany score jakości (0.0 - 1.0)
VALIDATION_MIN_QUALITY_SCORE=0.8

# Włącz szczegółowe logowanie walidacji
VALIDATION_VERBOSE=true

# =============================================================================
# PDF Rendering Configuration  
# =============================================================================

# Szablon dokumentu: professional | minimal | detailed
PDF_TEMPLATE=professional

# Ścieżka do logo firmy (opcjonalne)
PDF_COMPANY_LOGO=

# Marginesy dokumentu (mm)
PDF_MARGIN_TOP=20
PDF_MARGIN_BOTTOM=20
PDF_MARGIN_LEFT=25
PDF_MARGIN_RIGHT=25

# Czcionka podstawowa
PDF_FONT_FAMILY=DejaVu Sans

# =============================================================================
# Output Configuration
# =============================================================================

# Katalog wyjściowy dla generowanych dokumentów
OUTPUT_DIR=./output

# Format daty w dokumentach
DATE_FORMAT=%Y-%m-%d

# Język dokumentacji: pl | en
DOCUMENT_LANGUAGE=pl

# =============================================================================
# Logging Configuration
# =============================================================================

# Poziom logowania: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Format logów: json | console
LOG_FORMAT=console

# Katalog logów
LOG_DIR=./logs

# =============================================================================
# Company Defaults (opcjonalne - można nadpisać w formularzu)
# =============================================================================

DEFAULT_COMPANY_NAME=
DEFAULT_COMPANY_NIP=
DEFAULT_COMPANY_REGON=
DEFAULT_FISCAL_YEAR=2025
