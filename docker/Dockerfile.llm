# =============================================================================
# LLM Service Dockerfile - LiteLLM Proxy
# =============================================================================
FROM python:3.11-slim-bookworm

LABEL maintainer="Tomasz Sapletta <kontakt@prototypowy.pl>"
LABEL description="LLM Service z LiteLLM dla systemu B+R"
LABEL version="1.0.0"

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# System dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create app user
RUN useradd -m -u 1000 -s /bin/bash llmuser

# Set working directory
WORKDIR /app

# Install LiteLLM
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir \
        litellm[proxy]==1.56.4 \
        prisma==0.15.0 \
        pyyaml==6.0.2 \
        redis==5.2.1 \
        asyncpg==0.30.0

# Copy config
COPY config/litellm_config.yaml /app/config.yaml

# Switch to non-root user
USER llmuser

# Environment variables
ENV PYTHONUNBUFFERED=1

# Expose port
EXPOSE 4000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:4000/health || exit 1

# Run LiteLLM proxy
CMD ["litellm", "--config", "/app/config.yaml", "--port", "4000", "--host", "0.0.0.0"]
